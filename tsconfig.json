{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
			"@/*": ["src/*"],
			"views/*": ["src/views/*"],
			"store/*": ["src/stores/*"],
			"service/*": ["src/service/*"],
			"components/*": ["src/components/*"]
		}
  },
  "exclude": [
    "node_modules",
    "dist",
    "script",
    "webpack",
    "jest"
  ]
}
